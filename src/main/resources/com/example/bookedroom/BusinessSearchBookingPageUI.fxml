<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600.0" prefWidth="350.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.bookedroom.BusinessSearchBookingPageController">
   <children>
      <Pane prefHeight="50.0" prefWidth="350.0" style="-fx-background-color: orange;">
         <children>
            <Pane layoutX="6.0" layoutY="5.0" onMouseClicked="#moveBusinessMainPage" prefHeight="40.0" prefWidth="40.0" style="-fx-background-color: black;" />
            <Pane layoutX="100.0" layoutY="10.0" prefHeight="30.0" prefWidth="150.0" style="-fx-background-color: gray;">
               <children>
                  <Text layoutX="52.0" layoutY="20.0" strokeType="OUTSIDE" strokeWidth="0.0" text="150x30" />
               </children>
            </Pane>
         </children>
      </Pane>
      <TabPane layoutY="49.0" prefHeight="550.0" prefWidth="350.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="숙소별 조회">
               <content>
                  <ScrollPane fx:id="roomSearchPane" prefHeight="200.0" prefWidth="200.0" />
               </content>
          </Tab>
          <Tab text="일자별 조회">
               <content>
                  <ScrollPane fx:id="DateSearchPane" prefHeight="200.0" prefWidth="200.0">
                     <content>
                        <TableView fx:id="dateTableView" prefHeight="521.0" prefWidth="350.0">
                          <columns>
                            <TableColumn fx:id="tcRoomName" prefWidth="75.0" style="-fx-alignment: center; -fx-font-size: 15px;" text="숙소명" />
                            <TableColumn fx:id="tcYesterday" prefWidth="75.0" style="-fx-alignment: center; -fx-font-size: 15px;" text="어제" />
                              <TableColumn fx:id="tcToday" prefWidth="75.0" style="-fx-alignment: center; -fx-font-size: 15px;" text="오늘" />
                              <TableColumn fx:id="tcNextday" prefWidth="75.0" style="-fx-alignment: center; -fx-font-size: 15px;" text="내일" />
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </content></ScrollPane>
               </content>
          </Tab>
        </tabs>
      </TabPane>
   </children>
</AnchorPane>
